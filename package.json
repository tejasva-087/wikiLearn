{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "Full-stack MERN boilerplate for modern web application development",
  "license": "MIT",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run start",
    "client": "cd frontend && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install --legacy-peer-deps",
    "lint": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "lefthook": "^1.11.6"
  }
}
